<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema aplicado à janela do Android enquanto o processo está iniciando -->
    <style name="LaunchTheme" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Tema aplicado após o início do processo, e também como fundo do Flutter -->
    <style name="NormalTheme" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>
</resources>
